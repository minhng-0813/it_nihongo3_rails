<!DOCTYPE html>
<html>
  <head>
    <title>Thefirstrails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to "ホーム", "/" %>
      <%= link_to "サインアウト", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    <% else %>
      <div class="nav-item">
        <%= link_to "サインイン", new_user_session_path, class: "nav-link"%>
        <%= link_to "ユーザ登録" , new_user_registration_path, method: :get%>
      </div>
    <% end %>
    <hr>
    <%= yield %>
  </body>
</html>